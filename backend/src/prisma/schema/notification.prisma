model Notifications {
  id                Int                @id @default(autoincrement())
  type              NotificationType
  actorId           Admin              @relation(fields: [adminId], references: [id])
  createAt          DateTime           @default(now())
  adminId           Int
  notificationUsers NotificationUser[]
}

model NotificationUser {
  id              String        @id() @default(uuid())
  user            String
  userId          User          @relation(fields: [user], references: [id])
  status          Status
  message         String
  readAt          DateTime?
  title           String
  notificationId  Notifications @relation(fields: [notificationsId], references: [id])
  createAt        DateTime      @default(now())
  notificationsId Int
}

enum NotificationType {
  RESULT
  EMAIL
  CHAT
}

enum Status {
  READ
  UNREAD
}
